{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "predev": "yarn run types",
    "dev": "cd src && nodemon --exec ts-node -r tsconfig-paths/register index.ts -e ts,graphql",
