    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graphql.d.ts"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "graphql-tools": "^7.0.2",
    "graphql-yoga": "^1.18.3",
    "helmet": "^4.2.0",
    "morgan": "^1.10.0",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.8",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.10",
    "babel-runtime": "^6.26.0",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "nodemon": "^2.0.6",
    "pg": "^8.5.1",
    "ts-node": "^9.1.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
  }
}
